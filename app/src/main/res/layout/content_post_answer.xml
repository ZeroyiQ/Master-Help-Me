<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPureWhite"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="top.zeroyiq.master_help_me.activities.PostQuestionActivity"
    tools:showIn="@layout/activity_post_answer">


    <ProgressBar
        android:id="@+id/post_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <EditText
                android:id="@+id/edit_post_content_ans"
                style="@style/edit_text_style"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:gravity="start|top"
                android:hint="回答："
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:textSize="18sp" />


            <Button
                android:id="@+id/button_post_ans"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bt_button_blue"
                android:text="回答"
                android:textColor="@color/colorPureWhite"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

