<resources>

    <!-- Base application theme. -->
    <!--自定义appTheme-->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->
        <!--&lt;!&ndash; 支持库兼容 &ndash;&gt;-->
        <!--<item name="actionBarStyle">@style/MyActionBar</item>-->
    </style>

    <style name="MyAppTheme.NoActionBar" parent="@style/MyAppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 自定义EditText theme -->
    <style name="edit_text_style" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:background">@drawable/selector_bg_edit_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColorHint">@color/colorHintGrey</item>
    </style>

    <style name="MyAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
